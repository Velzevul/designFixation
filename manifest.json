{
  "manifest_version": 2,
  "name": "Design Fixation Client",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.pinterest.com/*"],
      "exclude_matches": [
        "*://www.pinterest.com/news*"
      ],
      "run_at": "document_start",
      "css": [
        "./app/index.css"
      ],
      "js": [
        "./app/manifest.js",
        "./app/vendor.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Alter collection view"
  },
  "permissions": [
    "activeTab"
  ]
}
