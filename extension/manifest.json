{
  "manifest_version": 2,
  "name": "Design Fixation Client",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.pinterest.com/*"],
      "exclude_matches": [
        "*://www.pinterest.com/news*"
      ],
      "js": [
        "./contentScript.js"
      ]
    },
    {
      "matches": ["*://www.pinterest.com/*"],
      "exclude_matches": [
        "*://www.pinterest.com/news*"
      ],
      "js": [
        "./xhrInterceptor.js"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "Design Fixation Widget"
  },
  "permissions": [
    "tabs"
  ]
}
