{
  "manifest_version": 2,
  "name": "Inspiration Seeking Client",
  "version": "0.1",
  "background": {
    "scripts": [
      "socket.io-1.4.5.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.pinterest.com/*"],
      "exclude_matches": [
        "*://www.pinterest.com/news*"
      ],
      "js": [
        "./contentScript.js"
      ]
    },
    {
      "matches": ["*://www.pinterest.com/*"],
      "exclude_matches": [
        "*://www.pinterest.com/news*"
      ],
      "js": [
        "./xhrInterceptor.js"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "Inspiration Seeking Study"
  },
  "permissions": [
    "tabs"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
